@page "/categories/edit/{id:int}"
@model RazorApp.Pages.Categories.Edit



<h3 class="mb-4">Edit Category</h3>

<form method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="CategoryId" />

    <div class="mb-3">
        <label asp-for="CategoryUpdateDto.Name" class="form-label">Category name</label>
        <input asp-for="CategoryUpdateDto.Name" class="form-control" placeholder="Enter category name" />
        <span class="text-danger" asp-validation-for="CategoryUpdateDto.Name"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Categories/Index" class="btn btn-outline-secondary">Cancel</a>
    </div>

    <div class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




