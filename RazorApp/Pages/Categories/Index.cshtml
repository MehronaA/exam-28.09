@page "/categories"
@model RazorApp.Pages.Categories.Index

<div class="d-flex flex-wrap gap-4 justify-content-start">
@foreach(var item in Model.Categories){
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">@item.Name</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
    <a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
  </div>
</div>
}
</div>



